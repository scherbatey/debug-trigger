{
  "name": "debug-trigger",
  "displayName": "Debug Trigger",
  "description": "Trigger VS Code debugger automatically from app code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:debug-trigger.arm"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "Debug Trigger",
      "properties": {
        "debug-trigger.listento": {
          "definition": "TCP \"host port\" or Unix socket name or Windows pipe name",
          "type": "string",
          "default": "0.0.0.0 8989",
          "scope": "window"
        },
        "debug-trigger.timeout": {
          "definition": "Timeout in ms",
          "type": "number",
          "default": 1000,
          "scope": "window"
        },
        "debug-trigger.configurations": {
          "description": "Application -> debug configuration mapping. The configuration can be specified explicitly or as a string referring to the configuration from launch.json",
          "type": "object",
          "scope": "window",
          "default": {
            "cppdbg": {
              "name": "(gdb) Attach",
              "type": "cppdbg",
              "request": "attach",
              "stopAtEntry": true,
              "MIMode": "gdb",
              "setupCommands": [
                  {
                      "description": "Enable pretty-printing for gdb",
                      "text": "-enable-pretty-printing",
                      "ignoreFailures": true
                  }
              ]
            },
            "python": {
              "name": "Python: Attach",
              "type": "python",
              "request": "attach",
              "connect": {
                "host": "localhost",
                "port": 5678
              }
            }
          }
        }
      }

    },
    "commands": [
      {
        "command": "debug-trigger.arm",
        "title": "Debug Trigger: Arm"
      },
      {
        "command": "debug-trigger.disarm",
        "title": "Debug Trigger: Disarm"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.54.0",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  }
}
